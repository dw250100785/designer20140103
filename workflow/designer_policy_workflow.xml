<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--创意策略-->
        <!--工作流三元素-->
        <!--1.声明一个工作流-->
        <record model="workflow" id="wkf_designer_policy">
            <field name="name">designer.policy.wkf</field>
            <field name="osv">designer.policy</field>
            <field name="on_create" eval='True' />
            <!--<field name="on_create">True</field>-->
        </record>
        <!--2.定义工作流的 activity  有效节点-->
        <record model="workflow.activity" id="act_policy_draft">
            <field name="wkf_id" ref="wkf_designer_policy" />
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">designer_policy_draft()</field>
        </record>

        <record model="workflow.activity" id="act_policy_open">
            <field name="wkf_id" ref="wkf_designer_policy" />
            <field name="name">open</field>
            <field name="kind">function</field>
            <field name="action">designer_policy_open()</field>
        </record>

        <record model="workflow.activity" id="act_policy_close">
            <field name="wkf_id" ref="wkf_designer_policy" />
            <field name="name">close</field>
            <field name="kind">function</field>
            <field name="action">designer_policy_close()</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.activity" id="act_policy_cancel">
            <field name="wkf_id" ref="wkf_designer_policy" />
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">designer_policy_cancel()</field>
            <field name="flow_stop">True</field>
        </record>
        <!--2.定义工作流的 transition  迁移条件-->
        <record model="workflow.transition" id="policy_t1">
            <field name="act_from" ref="act_policy_draft" />
            <field name="act_to" ref="act_policy_open" />
            <field name="signal">designer_policy_open</field>
        </record>

        <record model="workflow.transition" id="policy_t2">
            <field name="act_from" ref="act_policy_open" />
            <field name="act_to" ref="act_policy_close" />
            <field name="signal">designer_policy_close</field>
        </record>

        <record model="workflow.transition" id="policy_t4">
            <field name="act_from" ref="act_policy_open" />
            <field name="act_to" ref="act_policy_cancel" />
            <field name="signal">designer_policy_cancel</field>
        </record>

    </data>
</openerp>
